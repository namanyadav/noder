<main class="ui text container">
    <div class="ui grid container equal width padded">
        <form class="ui form sixteen wide column" style="border: 1px dotted black">
            <div class="ui reveal_page">
                <div class="visible content" data-pageno="1">
<!--                    <img src="https://semantic-ui.com/images/avatar/large/nan.jpg" class="ui small image">-->
                    <div class="field sixteen wide column required">
                        <label class="sixteen wide column">Category</label>
                        <div class="ui equal width padded1 grid padding0 buttongrp">
                            <div class="column center aligned">
                                <div class="row">
                                    <button class="sixteen wide column circular ui icon button massive toggle" type="button">
                                        <i class="icon music"></i>
                                    </button>
                                </div>
                                <div class="row">
                                    <span>Music</span>
                                </div>
                            </div>

                            <div class="column center aligned">
                                <div class="row">
                                    <button class="sixteen wide column circular ui icon button massive toggle" type="button">
                                        <i class="icon food"></i>
                                    </button>
                                </div>
                                <div class="row">
                                    <span>Food & Drink</span>
                                </div>
                            </div>

                            <div class="column center aligned">
                                <div class="row">
                                    <button class="sixteen wide column circular ui icon button massive toggle" type="button">
                                        <i class="icon paint brush"></i>
                                    </button>
                                </div>
                                <div class="row">
                                    Arts & Culture
                                </div>
                            </div>

                            <div class="column center aligned">
                                <div class="row">
                                    <button class="sixteen wide column circular ui icon button massive toggle" type="button">
                                        <i class="icon cocktail"></i>
                                    </button>
                                </div>
                                <div class="row">
                                    Parties & Nightlife
                                </div>
                            </div>


                            <div class="column center aligned">
                                <div class="row">
                                    <button class="sixteen wide column circular ui icon button massive toggle" type="button">
                                        <i class="icon football ball"></i>
                                    </button>
                                </div>
                                <div class="row">
                                    Sports & Wellness
                                </div>
                            </div>

                            <div class="column center aligned">
                                <div class="row">
                                    <button class="sixteen wide column circular ui icon button massive toggle" type="button">
                                        <i class="icon sitemap"></i>
                                    </button>
                                </div>
                                <div class="row">
                                    Networking
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="field sixteen wide column required">
                        <label class="sixteen wide column">Event Date</label>
                        <!--                <input type="date" name="event_date" placeholder="Event Date">-->
                        <div class="fields">
                            <div class="eight wide field">
                                <div class="ui calendar">
                                    <div class="ui input left icon">
                                        <i class="calendar icon"></i>
                                        <input type="text" placeholder="Start Date/Time">
                                    </div>
                                </div>
                            </div>
                            <div class="eight wide field">
                                <div class="ui calendar">
                                    <div class="ui input left icon">
                                        <i class="calendar icon"></i>
                                        <input type="text" placeholder="End Date/Time">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="field sixteen wide column required">
                        <label class="sixteen wide column">Title</label>
                        <input class="sixteen wide column" type="text" name="title" placeholder="Title">
                    </div>
                    <div class="field sixteen wide column required">
                        <label class="sixteen wide column">Description</label>
                        <!--            <input type="text" name="desc" placeholder="Description">-->
                        <textarea rows="2" name="desc" class="sixteen wide column"></textarea>
                    </div>

                </div>
                <div class="hidden content" data-pageno="2">
<!--                    <img src="https://semantic-ui.com/images/avatar/large/chris.jpg" class="ui small image">-->
                    <div class="field required">
                        <label>Capacity</label>
                        <input type="text" name="capacity" placeholder="Capacity">
                    </div>
                    <div class="inline field required">
                        <label>Pricing 2</label>
                        <div class="ui toggle checkbox">
                            <input type="checkbox" tabindex="0" class="hidden">
                        </div>
                    </div>
                    <div class="field required">
                        <label>Cost ($)</label>
                        <input type="text" name="cost" placeholder="Cost">
                    </div>
                    <div class="field required">
                        <label>Venue</label>
                        <input type="text" name="venue" placeholder="Venue">
                    </div>

                </div>
                <div class="hidden content" data-pageno="3">
                    <img src="https://semantic-ui.com/images/avatar/large/ade.jpg" class="ui small image">
                </div>

            </div>
            <div class="ui reveal_ctrl">
                <button class="ui button" type="button" onclick="reveal_prev()">Reveal Prev</button>
                <button class="ui button" type="button" onclick="reveal_next()">Reveal Next</button>
            </div>

        </form>
    </div>
    {{>reveal}}
</main>